{
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"prettier"
	],
	"plugins": [
		"prettier"
	],
	"rules": {
		"eqeqeq": [
			"error",
			"always"
		],
		"no-console": "off",
		"prettier/prettier": [
			"error",
			{
				"printWidth": 120,
				"bracketSpacing": true,
				"singleQuote": true,
				"tabWidth": 2,
				"useTabs": true
			}
		],
		"sort-imports": ["error", {
			"ignoreCase": false,
			"ignoreDeclarationSort": false,
			"ignoreMemberSort": false,
			"memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
		}]
	}
}